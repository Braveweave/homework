program fordemo;
var i;
begin
    /* print 0 .. 10 */
    for i := 0 step 1 until 10 do
        write(i);

    /* this will print nothing */
    for i := 10 step -1 until 0 do
        write(i);

    /* print 0, 2, ..., 10 */
    for i := 0 step 2 until 10 do
        write(i);
    
    /* print 1, 3, ..., 9 */
    for i := 1 step 0 until 9 do
    begin
        write(i);
        i += 2
    end
end.
